<!doctype html>

<head>
    <title>{{ title }} &mdash; Rooklike</title>
    <meta name='viewport' content='width=device-width, initial-scale=1.0, minimum-scale=1.0' />
    <link href='/static/style.css' rel='stylesheet' type='text/css' />
    <script src='/static/jquery-1.8.3.min.js'></script>
    <script src='/static/jquery.jrumble.1.3.min.js'></script>
    <script src='/static/board.js'></script>
</head>

<body>

    <h1>
        <a href="/">Rooklike</a>
    </h1>

    <a href='{{ url_for('list') }}' class='back'>&larr; Boards</a>
    <a href='{{ url_for('edit', id=id) }}' class='forwards'>&#63490; Edit</a>

    <h2 id='board_title'>{{ title }}</h2>

    <board width='{{ board.width }}' height='{{ board.height }}' class='show_valid'>

        {% for square in board.squares %}
            <tile filled='{{ square.filled }}' x='{{ square.x }}' y='{{ square.y }}'>

                {% if square.piece %}
                    <piece color='{{ square.color }}' type='{{ square.piece }}' class='unlocked' />
                {% endif %}

            </tile>
        {% endfor %}

    </board>

    <div id='game_over_dialog' class='dialog'>
        <div id='game_over_win' class='dialog_inner'>
            Victory! White has captured all remaining black tiles.
        </div>
        <div id='game_over_lose' class='dialog_inner'>
            Game Over. Black has captured all remaining white tiles.
        </div>
    </div>

    <div id='replay'>
        <a href='#'>&#10226; Replay</a>
    </div>

</body>