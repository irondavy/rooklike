<!doctype html>

<head>
    <title>{{ title }} &mdash; Rooklike</title>
    <link href='/static/style.css' rel='stylesheet' type='text/css' />
    <script src='/static/jquery-1.8.3.min.js'></script>
    <script src='/static/jquery.jrumble.1.3.min.js'></script>
    <script src='/static/board.js'></script>
</head>

<body>

    <h1>
        <a href="/" class="back">&lArr; Boards</a>
        <a href="/">Rooklike</a>
        <a href="/edit/{{ id }}" class="forwards">&#63490; Edit</a>
    </h1>

    <board width='{{ board.width }}' height='{{ board.height }}' class='show_valid'>

        <h2>{{ title }}</h2>

        {% for square in board.squares %}
            <tile filled='{{ square.filled }}' x='{{ square.x }}' y='{{ square.y }}'>

                {% if square.piece %}
                    <piece color='{{ square.color }}' type='{{ square.piece }}' class='unlocked' />
                {% endif %}

            </tile>
        {% endfor %}

    </board>

</body>